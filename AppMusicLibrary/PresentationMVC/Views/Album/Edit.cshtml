@model Domain.Model.Entities.AlbumEntity

@{
    ViewData["Title"] = "Edit";
}
<div class="content-top">
    <div class="col-md-7 content-top1">
        <h1>Edit</h1>
    </div>
    <div class="col-md-5 top-col">
        <h4>AlbumEntity</h4>
    </div>
</div>
<hr />
<div class="content-mid">
    <div class="col-xl-12 mid">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DataLancamento" class="control-label"></label>
                        <input asp-for="DataLancamento" class="form-control" />
                        <span asp-validation-for="DataLancamento" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Remasterizado" /> @Html.DisplayNameFor(model => model.Remasterizado)
                        </label>
                    </div>
                    <div class="form-group form-check">
                        <label asp-for="ImageUri" class="control-label"></label>
                        <img src="@Model.ImageUri" style="width: 200px" />
                        <input asp-for="ImageUri" class="form-control" />
                        <span asp-validation-for="ImageUri" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-success" type="submit" value="Save"/>
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a class="btn btn-default" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
        
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
